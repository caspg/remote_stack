<li class="bg-white container mx-auto mb-2 p-4 border rounded hover:shadow-md transition-shadow duration-100 ease-in-out">
  <div class="flex flex-col">
      <%= link_to job_posts_path(job_post) do %>
        <h2 class="font-semibold mb-1 hover:underline">
          <%= job_post.title %>
        </h2>
      <% end %>

    <div>
      <% if job_post.company.present? %>
        <span>
          <%= job_post.company.name %>
        </span>
      <% end %>

      <% if job_post.salary.present? %>
        <span class="text-green-600 ml-4 text-sm">
          <%= job_post.salary %>
        </span>
      <% end %>
    </div>

    <div class="mt-2">
      <%= render(partial: 'shared/skill_tag', collection: job_post.skills, as: :skill) %>
    </div>

    <p class="flex text-xs mt-1 self-end">
      <%= image_tag('icons/time.svg', class: 'opacity-75 w-4 mr-2') %>
      <%= time_ago_in_words(job_post.publication_datetime) %>
    </p>
  </div>
</li>
