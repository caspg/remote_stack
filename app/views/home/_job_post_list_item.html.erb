<li class="bg-white container mx-auto mb-2 p-4 border rounded cursor-pointer">
  <div class="flex flex-col">
    <h2 class="font-semibold mb-1 hover:underline">
      <%= link_to job_post.title, job_posts_path(job_post) %>
    </h2>

    <% if job_post.company.present? %>
      <p>
        <%= job_post.company.name %>
      </p>
    <% end %>

    <div class="mt-2">
      <%= render(partial: 'shared/skill_tag', collection: job_post.skills, as: :skill) %>
    </div>

    <p class="flex text-xs mt-1 self-end">
      <%= image_tag('icons/time.svg', class: 'opacity-75 w-4 mr-2') %>
      <%= time_ago_in_words(job_post.publication_datetime) %>
    </p>
  </div>
</li>
